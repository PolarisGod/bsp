{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "NestJs Program",
      "runtimeArgs": [ 
        "--nolazy", 
        "-r", 
        "ts-node/register", 
        "-r", 
        "tsconfig-paths/register" 
        ], 
      "args": [
        "${workspaceFolder}/src/main.ts"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}